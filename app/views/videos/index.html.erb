<section id="bricks">

    <div class="row masonry">

      <!-- brick-wrapper -->
         <div class="bricks-wrapper">

          <div class="grid-sizer"></div>

          <div class="brick entry featured-grid animate-this" >
            <div class="entry-content" style="background: #ffffff;">
              <% if @latest_video.present?%> 
              <div id="featured-post-slider" class="flexslider">
                      <div class="entry-thumb video-image">
                          <% if @latest_video.archive_video.present?%>  
                           <video src="<%= @latest_video.archive_video %>" poster="<%=  @latest_video.archive_video(:cuadro1) %>" controls>
                            <code>video</code>.
                          </video>
                        <%else%>
                          <a class="thumb-link">
                          <%= image_tag ('novideo.png') %></a>
                        <%end%>
                      </div>

                      <div class="entry-text">
                        <div class="entry-header">

                          <div class="entry-meta">
                            <span class="cat-links">
                              <a href="#">#English</a>                        
                            </span>     
                          </div>
                          <h1 class="entry-title"><%= link_to "#{@latest_video.title}", @latest_video %>
                        </div>
                        <div class="entry-excerpt">
                          <%= @latest_video.description %>
                        </div>
                      </div>
              </div> <!-- end featured-post-slider -->  
              <%end%>            
            </div> <!-- end entry content -->             
          </div>  

              <%= render partial: 'video' %>
              <div id="videos"></div>
             
         </div> <!-- end brick-wrapper --> 

    </div> <!-- end row -->

    <div class="row">
          <%= will_paginate @videos, hidden: true %>
          <div id="request_video_div" style="display:none;"><%= render "/video_requests/form.html.erb" %></div>

